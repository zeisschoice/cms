<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangzhixuan.mapper.RoomMapper">

	<resultMap id="BaseResultMap" type="com.wangzhixuan.model.Room">
		<id column="room_id" property="roomId" />
		<result column="room_name" property="roomName" />
		<result column="building_id" property="buildingId" />
		<result column="type" property="type" />
		<result column="mon_rent" property="monRent" />
		<result column="status" property="status" />
		<result column="begin_date" property="beginDate" />
		<result column="end_date" property="endDate" />
		<result column="liver" property="liver" />
		<result column="remark" property="remark" />
	</resultMap>

    <!-- 通用查询结果列-->
    <sql id="Base_Column_List">
        room_id AS roomId,building_id buildingId, room_name AS roomName, type, mon_rent AS monRent, status, begin_date AS beginDate, end_date AS endDate, liver, remark
    </sql>
    
    <select id="selectRoomList" resultType="Room">
       select
        <include refid="Base_Column_List"/>
        from room
        where 1=1
        <if test="buildingId!=null">
          and building_id = ${buildingId}
        </if>
        order by 
       ${sort} ${order}
    
    </select>
    
    
</mapper>
